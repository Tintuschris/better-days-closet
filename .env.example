# Environment Variables Configuration

# Database Configuration (client)
# Used by client-side Supabase (`app/lib/supabase.js`)
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# Database Configuration (legacy/back-compat)
# Some server utilities can also read these if provided
SUPABASE_URL=your_supabase_url
SUPABASE_ANON_KEY=your_supabase_anon_key

# Server-side privileged key for uploads (DO NOT COMMIT REAL VALUE)
# Required by utils/supabase/admin.js and /api/upload
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Feature Flags for Gradual Migration
# Set to 'true' to enable new profile pages (default: false)
NEXT_PUBLIC_USE_NEW_PROFILE_PAGES=false

# React Query Configuration
NEXT_PUBLIC_ENABLE_REACT_QUERY=false

# Performance Monitoring
NEXT_PUBLIC_ENABLE_PERFORMANCE_MONITORING=false

# Admin Features
NEXT_PUBLIC_ADMIN_EMAIL=admin@betterdayscloset.com
